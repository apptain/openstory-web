@import 'jeet'
@import 'nib'
@import 'lib/normalize'
@import 'lib/colors'
@import 'lib/utilities'
@import 'lib/fonts'
@import 'lib/typography'

html
body
  text-align center
  margin 0
  padding 0
  height 100%
  background $soft_gradient

.page-wrap
  text-align left
  width 90%
  max-width 1350px
  overflow hidden
  margin 0 auto
  position relative
  +breakpoint(mama-bear)
  	width 96%
	+breakpoint(baby-bear)
		width 105%
    
header.top
  background-color $primary_color_darkened
  darkbg()
  text-align center
	h1 
    padding ($padding / 2) 
    margin 0

.content-wrap
  background-color $content_bg_color
  lightbg()

.grid
  clearfix()
	width 100%
  float left
  padding $padding 
  padding-top 0
  position relative
  +breakpoint(mama-bear)	
    padding 0 0 $padding/2 $padding/2
  +breakpoint(baby-bear)
    padding 0
    float none
    width 100%
    
.grid-primary
  width "calc(%s - 80px)" % percent($golden_major) 
  margin 0 30px 0 50px 
  +breakpoint(mama-bear)
  	width "calc(%s - 40px)" % percent($golden_major) 
		margin 0 15px 0 25px 

.grid-secondary
  width "calc(%s - 80px)" % percent($golden_minor) 
  margin 0 50px 0 30px 
  +breakpoint(mama-bear)
    width "calc(%s - 40px)" % percent($golden_minor) 
    margin 0 25px 0 15px 

.grid-primary, .grid-secondary
  position relative
  float left
  +breakpoint(baby-bear)
    padding 0
    margin 0
    float none
    width 100%

.article-title
  text-align center
  display block
  width 100%
  height 100%
  color $primary_color_lightened 
  h2
    margin 0
    padding ($padding / 3)
			
.explanation
  margin-left ($padding / 4)
  font-size 1.2em
  margin 0 0 1rem 0
  padding 0 0 0 1rem
  font-weight 300
  font-style italic
  color $primary_color_greyed
  border-left $padding solid $primary_color_greyed

.module
  background-color #fff
  lightbg()
  padding $padding
  margin 0 0 $padding 0
  position relative
  box-shadow( 0 3px 8px $primary_color_darkened)
  +breakpoint(baby-bear)
    padding ($padding / 3)
  +breakpoint(baby-bear)
    padding ($padding / 4)
  aside &
    padding ($padding / 2)
    +breakpoint(baby-bear)
      padding ($padding / 3)
    +breakpoint(baby-bear)
      padding ($padding / 4) 

